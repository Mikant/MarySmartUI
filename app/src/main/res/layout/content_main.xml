<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ru.nordwest.maryl.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical"
    android:theme="@android:style/Theme.Holo.Light.DarkActionBar">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MeasInfo"
        android:padding="10dp"
        android:background="?android:attr/panelColorBackground">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ПК:"
                android:id="@+id/editText2"
                android:layout_weight="0"
                android:textColor="?android:attr/textColorTertiary" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="p10-012"
                android:id="@+id/editText3"
                android:layout_weight="1"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:textColor="?attr/actionMenuTextColor" />

            <Button
                android:text="+"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:id="@+id/button3"
                android:layout_weight="0.5" />


            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="F:"
                android:id="@+id/textView11"
                android:layout_weight="0"
                android:textColor="?android:attr/textColorTertiary" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner"
                android:entries="@array/Frequencies"
                android:layout_weight="1"
                android:theme="?android:attr/actionBarTabTextStyle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(1)"
                android:id="@+id/editText"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="?android:attr/textColorTertiary" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Data"
        android:padding="10dp"
        android:layout_below="@+id/MeasInfo">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">


                <EditText
                    android:layout_column="1"
                    android:layout_row="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="5"
                    android:id="@+id/editText4"
                    android:text="14.555"
                    android:gravity="right|center_vertical"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="?android:attr/colorActivatedHighlight" />

                <TextView
                    android:text="мВ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                <TextView
                    android:text="(0,4%)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:textColor="?android:attr/textColorTertiary"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&#916;U (3) :"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_gravity="right" />

                <EditText
                    android:layout_column="1"
                    android:layout_row="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="5"
                    android:id="@+id/editText6"
                    android:text="9.515"
                    android:gravity="right|center_vertical"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="?android:attr/colorActivatedHighlight" />

                <TextView
                    android:text="мВ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                <TextView
                    android:text="(0,4%)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:textColor="?android:attr/textColorTertiary"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&#916;U (5) :"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_gravity="right" />

                <EditText
                    android:layout_column="1"
                    android:layout_row="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="5"
                    android:id="@+id/editText9"
                    android:text="4.555"
                    android:gravity="right|center_vertical"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="?android:attr/colorActivatedHighlight" />

                <TextView
                    android:text="мВ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView10"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                <TextView
                    android:text="(0,4%)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:textColor="?android:attr/textColorTertiary"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                <FrameLayout
                    android:layout_column="0"
                    android:layout_row="3"
                    android:layout_width="match_parent"
                    android:background="?attr/colorButtonNormal"
                    android:layout_height="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="fill_horizontal"
                    android:layout_columnSpan="4">

                </FrameLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&#916;&#966; (1-3) :"
                    android:layout_column="0"
                    android:layout_row="4"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_gravity="right" />

                <EditText
                    android:layout_column="1"
                    android:layout_row="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="5"
                    android:id="@+id/editText19"
                    android:text="0.255"
                    android:gravity="right|center_vertical"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="?android:attr/colorAccent" />

                <TextView
                    android:text="&#176;"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView20"
                    android:paddingRight="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <TextView
                    android:text="(0,4%)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView21"
                    android:textColor="?android:attr/textColorTertiary"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&#916;&#966; (3-5) :"
                    android:layout_column="0"
                    android:layout_row="5"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_gravity="right" />

                <EditText
                    android:layout_column="1"
                    android:layout_row="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="5"
                    android:id="@+id/editText29"
                    android:text="12.255"
                    android:gravity="right|center_vertical"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="?android:attr/colorAccent" />

                <TextView
                    android:text="&#176;"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView30"
                    android:paddingRight="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <TextView
                    android:text="(0,4%)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView31"
                    android:textColor="?android:attr/textColorTertiary"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&#916;U (1) :"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_gravity="right" />

            </GridLayout>



        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/SignalGraph"
        android:layout_width="match_parent"
        android:background="?android:attr/textColorHint"
        android:layout_height="match_parent"
        android:layout_below="@+id/Data"
        android:layout_above="@+id/BottomPanel">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="7">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_vertical"
                android:layout_weight="1"
                android:layout_rowWeight="1">

                <ImageView
                    android:layout_height="1dp"
                    android:id="@+id/imageView180"
                    android:background="@android:color/background_light"
                    android:layout_toRightOf="@+id/textView180"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:alpha="0.5" />

                <TextView
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView180"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="?android:attr/textColorSecondaryInverse"
                    android:padding="2dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_gravity="fill_vertical"
                android:layout_weight="1"
                android:layout_rowWeight="1">

                <ImageView
                    android:layout_height="1dp"
                    android:id="@+id/imageView150"
                    android:background="@android:color/background_light"
                    android:layout_toRightOf="@+id/textView150"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:alpha="0.5" />

                <TextView
                    android:text="-1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView150"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="?android:attr/textColorSecondaryInverse"
                    android:padding="2dp" />
            </RelativeLayout>

        </GridLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:layout_height="1dp"
                android:id="@+id/imageView160"
                android:background="@android:color/background_light"
                android:layout_toRightOf="@+id/textView170"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:alpha="0.5" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView170"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="?android:attr/textColorSecondaryInverse"
                android:padding="2dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">

            <ImageView
                android:layout_height="match_parent"
                android:id="@+id/imageView60"
                android:background="@android:color/background_light"
                android:layout_above="@+id/textView70"
                android:layout_centerHorizontal="true"
                android:layout_width="1dp"
                android:alpha="0.5" />

            <TextView
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView70"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:textColor="?android:attr/textColorSecondaryInverse"
                android:padding="2dp" />
        </RelativeLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="7">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="fill_horizontal"
                android:layout_weight="1"
                android:layout_columnWeight="1">

                <ImageView
                    android:layout_height="match_parent"
                    android:id="@+id/imageView80"
                    android:background="@android:color/background_light"
                    android:layout_above="@+id/textView80"
                    android:layout_centerHorizontal="true"
                    android:layout_width="1dp"
                    android:alpha="0.5" />

                <TextView
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView80"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="?android:attr/textColorSecondaryInverse"
                    android:padding="2dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="fill_horizontal"
                android:layout_weight="1"
                android:layout_columnWeight="1">

                <ImageView
                    android:layout_height="match_parent"
                    android:id="@+id/imageView"
                    android:background="@android:color/background_light"
                    android:layout_above="@+id/textView50"
                    android:layout_centerHorizontal="true"
                    android:layout_width="1dp"
                    android:alpha="0.5" />

                <TextView
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView50"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="?android:attr/textColorSecondaryInverse"
                    android:padding="2dp" />
            </RelativeLayout>

        </GridLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/BottomPanel">

        <Button
            android:text="СТОП"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@android:color/holo_red_light" />

        <Button
            android:text="ОЧИСТИТЬ"

            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_weight="1" />

        <Button
            android:text="СТАРТ"

            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@android:color/holo_green_light" />
    </LinearLayout>

</RelativeLayout>
