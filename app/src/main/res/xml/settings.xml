<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:key="Method"
        android:title="@string/Method"
        android:summary="%s"
        android:defaultValue="ЧЗ-ВП"
        android:entries="@array/Methods"
        android:entryValues="@array/Methods"
        android:dialogTitle="Выберите метод"/>

    <PreferenceCategory
        android:title="Установка">
    <ListPreference
        android:key="ArrayList"
        android:title="Установка"
        android:summary="%S"
        android:defaultValue="ЧЗ-ВП"
        android:entries="@array/Methods"
        android:entryValues="@array/Methods"
        android:dialogTitle="Выберите установку"/>
    </PreferenceCategory>

    <PreferenceScreen
        android:key="NewArray"
        android:title="Новая установка"
        android:summary="Создание новой измерительной установки">

        <CheckBoxPreference/>
    </PreferenceScreen>

    <PreferenceCategory
        android:title="Подключение">
        <EditTextPreference
            android:key="Ip_address"
            android:title="IP адрес"
            android:summary="Введите IP адрес прибора в формате 192.168.0.1"
            android:defaultValue="192.168.0.1"
            android:dialogTitle="Введите IP адрес прибора" />
        <EditTextPreference
            android:key="Port"
            android:title="Порт"
            android:summary="Введите № порта подключения (по умолчанию 2073)"
            android:defaultValue="2073"
            android:dialogTitle="Введите порт подключения" />
    </PreferenceCategory>




</PreferenceScreen>